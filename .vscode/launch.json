    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/dcc",
            "args": [
                "<",
                "${workspaceFolder}/samples/t8.decaf"
            ],
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                },
            ],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
        }
    ]
}